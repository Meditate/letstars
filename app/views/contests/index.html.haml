.header
.contests
  .wrap
    .text-center
      .topic
        All contests
    %hr
    .text-center
      -@contests.each do |contest|
        .contest
          .contest-title
            .topic
              =contest.title
            .badge
              -if (contest.contest_end.to_date-Time.now.to_date).to_i < 0
                contest closed
              -else
                =(contest.contest_end.to_date-Time.now.to_date).to_i
                days left
          .contest-image
            %hr
            =image_tag contest.image, size:"300"
          =button_to "Take a part", contest, method: :get , class: 'btn btn-default btn-lg btn-block'
