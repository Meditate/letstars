.header
  .logo
    .text-center
      %b
        %h1 Letstars
    %i
      %span.logo-text show your talent
.text-center
  %h3 Latest contests:
.wrap
  %hr
  .text-center
    -@contests.each do |contest|
      -@modalName = '#myModal' + contest.id.to_s
      .contest
        .contest-title
          =contest.title
        .contest-image
          =image_tag contest.image, size:"300"
        .contest-description
          =contest.description
        %button.btn.btn-primary.btn-lg{"data-target" => @modalName, "data-toggle" => "modal", :type => "button"}
          Launch
  .text-center
    %p=link_to 'View all contests', contests_path, class:'btn btn-default '
-@contests.each do |contest|
  -@modalName='myModal' + contest.id.to_s
  .modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :id => @modalName, :role => "dialog", :tabindex => "-1"}
    .modal-dialog
      .modal-content
        .modal-header
          .contest
            .contest-title
              =contest.title
        .modal-body
          .contest-image
            .text-center
              =image_tag contest.image, size:"300"
          .contest-description
            =contest.description
        .modal-footer
          %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
          =link_to "Take a part", contest, class: 'btn btn-info'
